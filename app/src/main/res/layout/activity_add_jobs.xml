<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include
        android:id="@+id/mToolBar"
        layout="@layout/view_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/profile_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardCornerRadius="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/mTxtJobAttachImage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:text="@string/job_select"
                            android:textColor="@color/pg_green"
                            android:textSize="15sp" />

                        <ImageButton
                            android:id="@+id/mImgClear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|end"
                            android:background="@null"
                            android:padding="5dp"
                            android:src="@drawable/ic_cancel_black_24dp"
                            android:visibility="invisible"/>
                    </FrameLayout>

                    <ImageView
                        android:id="@+id/mImgJobImage"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_gravity="bottom"
                        android:autofillHints="@string/job_contact_mail"
                        android:background="@drawable/button_white"
                        android:padding="10dp" />


                    <TextView
                        android:id="@+id/mTxtJobType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="@string/job_from"
                        android:textColor="@color/pg_green"
                        android:textSize="15sp" />

                    <Spinner
                        android:id="@+id/mSpnJobType"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/button_white"
                        android:popupBackground="@color/white" />

                    <TextView
                        android:id="@+id/mTxtJobName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="@string/job_name"
                        android:textColor="@color/pg_green"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/mEditJobName"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/button_white"
                        android:padding="10dp" />

                    <TextView
                        android:id="@+id/mTxtJobDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="@string/job_description"
                        android:textColor="@color/pg_green"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/mEditJobDescription"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/button_white"
                        android:gravity="top|start"
                        android:inputType="textMultiLine"
                        android:minLines="4"
                        android:padding="10dp" />

                    <TextView
                        android:id="@+id/mTxtJobContactNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="@string/job_contact_number"
                        android:textColor="@color/pg_green"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/mEdtJobContactNumber"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/button_white"
                        android:padding="10dp" />

                    <TextView
                        android:id="@+id/mTxtJobContactMail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="@string/job_contact_mail"
                        android:textColor="@color/pg_green"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/mEdtJobContactMail"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/button_white"
                        android:padding="10dp" />


                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
